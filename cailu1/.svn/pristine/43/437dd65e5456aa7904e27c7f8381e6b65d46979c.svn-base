/* 采录设备列表 */

.cailu-content {
    width: 100%;
    position: absolute;
    top: .9rem;
    left: 0;
}


/* title开始 */

.cl-title {
    width: 100%;
    height: .9rem;
    display: flex;
}

.cl-title>div {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    color: red;
}


/* title结束 */


/* 列表start */

.cl-list {
    width: 100%;
}

.cl-list .cl-uls {
    width: 100%;
}

.cl-list .cl-uls .cl-lis {
    width: 100%;
    height: 1.4rem;
    background-color: #fff;
    position: relative;
    padding: .2rem 0 .2rem .2rem;
    margin-bottom: .2rem;
}

.cl-list .cl-uls .cl-lis .cl-lef {}

.cl-list .cl-uls .cl-lis .cl-lef>div {
    font-size: .28rem;
    line-height: .5rem;
}

.cl-list .cl-uls .cl-lis .cl-rig {
    width: 1.2rem;
    height: .6rem;
    line-height: .6rem;
    background-color: #366ca7;
    border-radius: .1rem;
    text-align: center;
    color: #fff;
    position: absolute;
    top: 50%;
    transform: translate(0, -50%);
    right: .2rem;
    font-size: .26rem;
}


/* 列表end */